---

const { text, href } = Astro.props;
---

<a href={href} class="button primary">{text}</a>
    
  
<style>

 .button {
        display: inline-block;
        padding: 1rem 1.8rem;
        margin: 0 0.5rem;
    
        text-decoration: none;
        border-radius: 6px;
        transition: background-color 0.3s ease;
        font-size: 1.6rem;
        background-color: var(--accent);
        color: var(--white);
        font-weight: 500;
    }
  
</style>